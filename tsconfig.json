{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["client/**/*", "server/**/*"],
  "exclude": ["node_modules", ".meteor"]
}
